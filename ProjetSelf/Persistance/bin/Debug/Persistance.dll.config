<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>

    <section name="entityFramework" type="System.Data.Entity.Internal.ConfigFile.EntityFrameworkSection, EntityFramework, Version=6.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" requirePermission="false" />
  </configSections>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.1" />
  </startup>
  <entityFramework>
    <defaultConnectionFactory type="System.Data.Entity.Infrastructure.LocalDbConnectionFactory, EntityFramework">
      <parameters>
        <parameter value="mssqllocaldb" />
      </parameters>
    </defaultConnectionFactory>
    <providers>
      <provider invariantName="System.Data.SqlClient" type="System.Data.Entity.SqlServer.SqlProviderServices, EntityFramework.SqlServer" />
    </providers>
  </entityFramework>

  <!-- définition de la chaîne de connection à la base de données -->
  <connectionStrings>
    <!-- name="NounoursDBContext" : donne un nom à cette chaîne de connexion pour pouvoir l'utiliser avec le DBContext
         Data Source=(localdb)\MSSQLLocalDB : indique qu'il s'agit d'une base de données SQL Server locale. MSSQLLocalDB peut changer avec la version de Visual Studio
         AttachDBFileName indique où se situe la base de données locale
         |Data Directory| est défini dans Program.cs-->
    <add name="SelfDBContext" 
         connectionString="Data Source=(localdb)\MSSQLLocalDB;Initial Catalog=ProjetSelf;Integrated Security=SSPI;AttachDBFileName=|DataDirectory|\ProjetSelf.mdf" 
         providerName="System.Data.SqlClient" />
  </connectionStrings>
</configuration>