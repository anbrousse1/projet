<UserControl x:Class="Vue.Paiement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vue"
             mc:Ignorable="d" 
             Width="auto" Height="auto" >
    <Grid>
        <Grid.RowDefinitions>
            
            <RowDefinition Height="60*" />
            <RowDefinition Height="10*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Name="mgrid"/>
        <Button Style="{StaticResource boutonValiderUC}" x:Name="Ticket" Content="TICKET" HorizontalAlignment="Center" Grid.Row="1" FontSize="30" VerticalAlignment="Top" Width="203" Height="106"  Background="Green"/>
        <Button Style="{StaticResource boutonAnnulerUC}" x:Name="Continuer" Content="CONTINUER" HorizontalAlignment="Center" FontSize="30" Grid.Row="2" VerticalAlignment="Top" Width="203" Height="106" Background="Red"/>

    </Grid>
</UserControl>
