<Application x:Class="ProjetSelf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ProjetSelf"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="boutonUC" TargetType="{x:Type Button}">
            <Setter Property="FontSize" Value="60"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="white"/>
            <Setter Property="Margin" Value="5,5,5,5"/>
        </Style>

        <Style x:Key="boutonValiderUC" TargetType="{x:Type Button}">
            <Setter Property="FontSize" Value="60"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="white"/>
            <Setter Property="Margin" Value="0,10,0,10"/>
            <Setter Property="Background" Value="Green"/>
        </Style>

        <Style x:Key="boutonAnnulerUC" TargetType="{x:Type Button}">
            <Setter Property="FontSize" Value="60"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="white"/>
            <Setter Property="Margin" Value="0,10,0,10"/>
            <Setter Property="Background" Value="red"/>
        </Style>


    </Application.Resources>
</Application>
