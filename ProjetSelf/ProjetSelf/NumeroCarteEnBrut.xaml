<UserControl x:Class="Vue.NumeroCarteEnBrut"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vue"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Numéro de carte du client : " Margin="40,0,40,0" Style="{StaticResource labelStyle}"/>
            <TextBox Name="numero" Margin="40,0,40,0" MaxHeight="40" MaxWidth="40" MinWidth="20" MinHeight="20"/>

            <Button Content="OK" Margin="40,0,40,0" Click="clickOK"/>
        </WrapPanel>
    </Grid>
</UserControl>
