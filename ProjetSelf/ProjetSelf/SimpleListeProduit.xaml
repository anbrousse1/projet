<UserControl x:Class="Vue.SimpleListeProduit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vue"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <ListView HorizontalAlignment="Center" VerticalAlignment="Top" Background="Transparent" BorderBrush="Transparent" ItemsSource="{Binding ingredientsROC}" SelectedItem="ListView_Selected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Label Content="{Binding Nom}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView> 
    </Grid>
</UserControl>
