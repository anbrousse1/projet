<UserControl x:Class="Vue.UCVisualiserUtilisateur"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vue"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
              x:Name="root">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>
        <Label Content="{Binding TitreUtilisateur, ElementName=root}" Style="{StaticResource labelStyle}" Grid.Column="0"/>
        <Label Content="{Binding NomUtilisateur, ElementName=root}" Style="{StaticResource labelStyle}" Grid.Column="1" />
        <Label Content="{Binding PrenomUtilisateur, ElementName=root}" Style="{StaticResource labelStyle}" Grid.Column="2"/>
        <Label Content="{Binding ServiceUtilisateur, ElementName=root}" Style="{StaticResource labelStyle}" Grid.Column="3"/>
        
    </Grid>
</UserControl>

