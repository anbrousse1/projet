<UserControl x:Class="Vue.GestionUtilisateur"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vue"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Grid.Column="0" Grid.Row="1" Background="Coral" Style="{StaticResource boutonUC}" Click="clickAjouter" MaxWidth="600">
            <TextBlock Text="Ajouter/Supprimer Utilisateur" TextWrapping="Wrap" TextAlignment="Center" />
        </Button>

        <Button Grid.Column="2" Grid.Row="1" Background="Coral" Style="{StaticResource boutonUC}" Click="clickVisualiser" MaxWidth="600">
            <TextBlock Text="Visualiser Utilisateurs" TextWrapping="Wrap" TextAlignment="Center"/>
        </Button>

        <Button Click="ClickRetour"  Grid.ColumnSpan="2"  Grid.Row="2" Content="Retour" MaxWidth="600" Style="{StaticResource boutonAnnulerUC}"/>

    </Grid>
</UserControl>
